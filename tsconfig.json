{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
   "exclude": ["node_modules", "dist", "stories", "**/*.stories.*", "**/*.test.*"]
}
